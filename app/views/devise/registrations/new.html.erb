<div class="forms">
  <%= image_tag 'seller.png', class: 'seller-logo' %>
  <h2>Регистрация</h2>
  <%= form_for(resource, as: resource_name, class: 'form-signin', url: registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>

      <div class="field">
        <%= f.label :first_name, 'Имя' %><br/>
        <%= f.text_field :first_name, class: 'form-control', autofocus: true %>
      </div>

      <div class="field">
        <%= f.label :second_name, 'Фамилия' %><br/>
        <%= f.text_field :second_name, class: 'form-control' %>
      </div>

      <div class="field">
        <%= f.label :patronymic, 'Отчество' %><br/>
        <%= f.text_field :patronymic, class: 'form-control' %>
      </div>

      <div class="field" style="margin-top:15px; margin-bottom:15px;">
        <%= f.label :is_seller, 'Я хочу иметь возможность подавать объявления: ' %>
        <%= f.check_box :is_seller, class: 'checkbox', id: 'show-passport-field', style:'display:inline' %>
      </div>

      <div class="field" id="passport-field">
        <%= f.label :passport_number, '3 последние цифры номера паспорта' %> <br/>
        <%= f.text_field :passport_number, class: 'form-control', value: '', placeholder: '_ _ _' %>
        <%= link_to 'Зачем это надо?', '', style: 'float:right;', data: {toggle: 'modal', target: '#myModal'}, id:'why' %>
        <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
          <div class="modal-dialog" role="document">
            <div class="modal-content">
              <div class="modal-header">
                <h4 class="modal-title" id="myModalLabel">Зачем нам нужны ваши последние три цифры паспорта?</h4>
              </div>
              <div class="modal-body">
                Здесь надо будет объяснить людям зачем надо вводить последние три цифры паспорта, Шахриер
              </div>
              <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Закрыть</button>
              </div>
            </div>
          </div>
        </div>
      </div>

      <div class="field">
        <%= f.label :login, 'Логин' %><br/>
        <%= f.text_field :login, class: 'form-control' %>
      </div>

      <div class="field">
        <%= f.label :email, 'Email' %><br/>
        <%= f.email_field :email, class: 'form-control' %>
      </div>

      <div class="field">
        <%= f.label :password, 'Пароль' %>
        <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %><br/>
        <%= f.password_field :password, autocomplete: "off", class: 'form-control' %>
      </div>

      <div class="field">
        <%= f.label :password_confirmation, 'Подтвердите пароль' %><br/>
        <%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control' %>
      </div>

      <div class="actions" style="margin-top:30px;">
        <%= f.submit "Зарегистрироваться", class: "btn btn-md btn-custom-violet btn-block", type: "submit" %>
      </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>